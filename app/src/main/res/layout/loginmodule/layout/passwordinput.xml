<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:layout_height="60dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/accountpassword"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="5"
                app:counterEnabled="true"
                app:counterMaxLength="16"
                app:counterOverflowTextAppearance="@style/MyHoloBluestyleforError"
                app:hintTextAppearance="@style/MyHoloBluestyleforHint"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/passwordinput"
                    style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="@string/inputyourpassword"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/eyes"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.55"
                android:background="@drawable/eye"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayout2" />
            <android.support.constraint.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />
        </android.support.constraint.ConstraintLayout>
        <View
            android:background="@color/mygrey"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="1dp"/>
        <View
            android:background="@color/mygrey"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/mygrey"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/mygrey"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
