<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--因为一次要移动一个布局 故此搭配父类是最好的选项 以方便一次恰好移动一个布局-->
    <TextView
        android:id="@+id/urgent_sale_info"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/urgent_sale_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/urgent_sale_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center_vertical|end"
        android:text="详情"
        android:textColor="@color/good_red"
        app:layout_constraintBottom_toBottomOf="@+id/urgent_sale_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/urgent_sale_info"
        app:layout_constraintTop_toTopOf="@+id/urgent_sale_info" />
</android.support.constraint.ConstraintLayout>