<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="你的联系方式。"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline19" />

    <Button
        android:id="@+id/finish_input"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="完成输入"
        android:textColor="@color/dark_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_input" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/phone_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/saler_rectoval"
        android:ems="10"
        android:hint="138 XXXX XXXX（必填）"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:padding="8dp"
        android:text="13288888888"
        app:layout_constraintStart_toEndOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/email_input" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/email_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/saler_rectoval"
        android:ems="10"
        android:hint="6666@qq.com..（选填）"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLength="20"
        android:padding="8dp"
        android:text="666666@qq.com"
        app:layout_constraintEnd_toEndOf="@+id/phone_input"
        app:layout_constraintTop_toBottomOf="@+id/qq_input" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/qq_input"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/saler_rectoval"
        android:ems="10"
        android:hint="666666...(选填)"
        android:inputType="number"
        android:lines="1"
        android:maxLength="11"
        android:padding="8dp"
        android:text="666666"
        app:layout_constraintEnd_toEndOf="@+id/email_input"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="QQ:"
        app:layout_constraintBottom_toBottomOf="@+id/qq_input"
        app:layout_constraintStart_toStartOf="@+id/guideline20"
        app:layout_constraintTop_toTopOf="@+id/qq_input" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Email:"
        app:layout_constraintBottom_toBottomOf="@+id/email_input"
        app:layout_constraintStart_toStartOf="@+id/guideline20"
        app:layout_constraintTop_toTopOf="@+id/email_input" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="电话："
        app:layout_constraintBottom_toBottomOf="@+id/phone_input"
        app:layout_constraintStart_toStartOf="@+id/guideline20"
        app:layout_constraintTop_toTopOf="@+id/phone_input" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />
</android.support.constraint.ConstraintLayout>