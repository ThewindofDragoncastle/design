<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fun_amend_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="以下信息还可以完善："
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewMessage" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/viewMessage"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="@dimen/user_info_height"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/amend_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/low_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/amend_top_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/low_grey"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="点击查看已完成信息"
            android:textColor="@color/black"
            android:textSize="@dimen/user_info_amend"
            app:layout_constraintBottom_toTopOf="@+id/amend_bottom_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amend_top_view" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/gray_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/amend_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/test"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/amend_bottom_view"
            app:layout_constraintEnd_toStartOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/amend_top_view" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>